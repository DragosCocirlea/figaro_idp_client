<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".SignInActivity"
        android:background="#D0ECAE"
>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/logo_name"
            android:text="figaro"
            android:textSize="52sp"
            android:gravity="center"
            android:layout_marginTop="70dp"
            app:layout_constraintTop_toTopOf="parent"/>

    <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="textEmailAddress"
            android:id="@+id/login_username"
            android:background="@drawable/rounded_edittext_top"
            android:cursorVisible="true"
            android:textCursorDrawable="@null"
            android:textSize="20sp"
            android:textColor="#333333"
            android:drawablePadding="25dp"
            android:hint="Enter email"
            android:textColorHint="#d8d8d8"
            android:paddingTop="5dp"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:paddingLeft="20dp"
            android:drawableLeft="@drawable/email"
            android:fontFamily="sans-serif"
            app:layout_constraintTop_toBottomOf="@id/logo_name"
            />

    <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/login_password"
            android:background="@drawable/rounded_edittext_bottom"
            android:cursorVisible="true"
            android:textCursorDrawable="@null"
            android:textSize="20sp"
            android:textColor="#333333"
            android:drawablePadding="25dp"
            android:hint="Enter password"
            android:textColorHint="#d8d8d8"
            android:paddingTop="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:paddingLeft="20dp"
            android:drawableLeft="@drawable/lock"
            android:fontFamily="sans-serif"
            app:layout_constraintTop_toBottomOf="@id/login_username"/>
    
    <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/button_login_mail"
            android:background="@drawable/rounded_button"
            android:layout_marginTop="70dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:fontFamily="sans-serif"
            android:textStyle="normal|bold"
            android:layout_below="@id/login_password"
            android:text="SIGN IN"
            app:layout_constraintTop_toBottomOf="@id/login_password"/>

    <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/button_login_google"
            android:layout_below="@id/button_login_mail"
            android:background="@drawable/rounded_button_google"
            android:text="Sign in with Google"
            android:layout_marginTop="7dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:paddingLeft="20dp"
            android:drawableLeft="@drawable/googleg_standard_color_18"
            android:radius="10dp"
            app:layout_constraintTop_toBottomOf="@id/button_login_mail"/>
    
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/register_tv"
            android:layout_below="@id/button_login_google"
            android:textSize="20sp"
            android:textColor="#673AB7"
            android:layout_marginTop="150dp"
            android:gravity="center"
            android:textStyle="bold"
            android:text="Not a user? Register here"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>